<Window x:Class="WpfLoggingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Logging App" Height="600" Width="800"
        MinHeight="400" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Buttons Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Name="StartButton" Content="Start" Width="100" Height="30" Margin="0,0,10,0" Click="StartButton_Click"/>
            <Button Name="StopButton" Content="Stop" Width="100" Height="30" Click="StopButton_Click"/>
        </StackPanel>
        
        <!-- Console Logging Area -->
        <Border Grid.Row="1" Background="#1E1E1E" Margin="10,0,10,10" BorderBrush="#3E3E3E" BorderThickness="1">
            <ScrollViewer Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox Name="LogTextBox" 
                         Background="#1E1E1E" 
                         Foreground="#00FF00" 
                         FontFamily="Courier New"
                         FontSize="12"
                         IsReadOnly="True"
                         BorderThickness="0"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Disabled"
                         HorizontalScrollBarVisibility="Disabled"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
